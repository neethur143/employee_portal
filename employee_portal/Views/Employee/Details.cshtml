@model employee_portal.Models.TbEmployee

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Employee Details</h2>
    </div>
    <dl class="row">
        <dt class="col-sm-3">Employee ID:</dt>
        <dd class="col-sm-9">@Model.EmployeeId</dd>
        <dt class="col-sm-3">Employee Code:</dt>
        <dd class="col-sm-9">@Model.EmployeeCode</dd>
        <dt class="col-sm-3">First Name:</dt>
        <dd class="col-sm-9">@Model.Firstname</dd>
        <dt class="col-sm-3">Last Name:</dt>
        <dd class="col-sm-9">@Model.Lastname</dd>
        <dt class="col-sm-3">Email Address:</dt>
        <dd class="col-sm-9">@Model.Email</dd>
        <dt class="col-sm-3">Phone Number:</dt>
        <dd class="col-sm-9">@Model.Phonenumber</dd>
        <dt class="col-sm-3">Salary:</dt>
        <dd class="col-sm-9">@Model.Salary</dd>
        <dt class="col-sm-3">Date Of Birth:</dt>
        <dd class="col-sm-9">@Model.DateOfBirth.ToString("dd-MM-yyyy")</dd>
        <dt class="col-sm-3">Date of Join:</dt>
        <dd class="col-sm-9">@Model.DateOfJoin.ToString("dd-MM-yyyy")</dd>
    </dl>
    <div class="row">
        <div class="col-3">
            <a asp-controller="Employee" asp-action="IncrementSalary" asp-route-id="@Model.EmployeeId" class="btn btn-lg btn-success p-2">
                <i class="fas fa-plus-circle"></i> Increment Salary
            </a>
        </div>
        <div class="col-3">
            <div class="btn-group" role="group">
                <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-lg btn-outline-primary p-2">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <form asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.EmployeeId" method="post" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                    <button type="submit" class="btn btn-lg btn-outline-danger p-2">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-3 text-right">
        <a asp-controller="Employee" asp-action="Index" class="btn btn-warning p-2">
            <i class="fas fa-arrow-left"></i> Back To List
        </a>
    </div>

</div>
