@model List<employee_portal.Models.TbSalaryIncrement>

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Employee Salary History</h2>
    </div>

    @if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Increment Date</th>
                    <th>Old Salary</th>
                    <th>New Salary</th>
                    <th>Increment Percentage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var increment in Model)
                {
                    <tr>
                        <td>@string.Format("{0:dd/MM/yyyy}", increment.IncrementDate)</td>
                        <td>@increment.OldSalary</td>
                        <td>@increment.NewSalary</td>
                        <td>@increment.Increpersent%</td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-controller="Employee" asp-action="IncrementSalary" asp-route-id="@Model[0].EmployeeId" class="btn btn-secondary">Back</a>
    }
    else
    {
        <p>No salary history records found.</p>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-sm btn-warning p-2" style="margin-top: 10px;">Back</a>
    }
</div>
